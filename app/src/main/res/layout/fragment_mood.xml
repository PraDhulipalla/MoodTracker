<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="beta.drab.moodtracker.Fragments.MoodFragment">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp">

        <com.melnykov.fab.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:elevation="10dp"
            android:layout_below="@+id/fab2"
            android:layout_alignLeft="@+id/fab2"
            android:layout_alignStart="@+id/fab2"
            android:clickable="false"
            android:nestedScrollingEnabled="true"
            android:onClick="onClickNewMood" />

        <TextView
            android:layout_width="162dp"
            android:layout_height="wrap_content"
            android:text="ADD MOOD"
            android:id="@+id/textView"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="#fff9fff4"
            android:singleLine="false"
            android:layout_alignTop="@+id/fab2"
            android:layout_alignLeft="@+id/textView2"
            android:layout_alignStart="@+id/textView2"
            android:shadowColor="#ff000000"
            android:shadowDx="-2"
            android:shadowDy="2"
            android:shadowRadius="0.01"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="44dp"
        android:layout_below="@+id/linearLayout"
        android:layout_alignLeft="@+id/linearLayout"
        android:layout_alignStart="@+id/linearLayout">

        <com.melnykov.fab.FloatingActionButton
            android:id="@+id/fab2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:elevation="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MODIFY MOOD"
            android:id="@+id/textView2"
            android:textSize="25dp"
            android:shadowColor="#ff000000"
            android:shadowDx="-2"
            android:shadowDy="2"
            android:shadowRadius="0.01"
            android:textColor="#fff9fff4"
            android:textStyle="bold"
            android:phoneNumber="false"
            android:layout_alignBottom="@+id/fab"
            android:layout_toRightOf="@+id/fab"
            android:layout_toEndOf="@+id/fab"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp" />
    </LinearLayout>


</RelativeLayout>
